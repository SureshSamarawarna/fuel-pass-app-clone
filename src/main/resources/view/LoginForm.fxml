<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="291.0" prefWidth="400.0" stylesheets="@../css/login-form.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginFormController">
   <children>
      <Label alignment="CENTER" layoutY="28.0" text="LOGIN" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <font>
            <Font name="Ubuntu Bold" size="41.0" />
         </font></Label>
      <FlowPane alignment="CENTER" hgap="10.0" layoutX="106.0" layoutY="90.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label text="Don't have an account?">
               <font>
                  <Font name="Ubuntu" size="21.0" />
               </font>
            </Label>
            <Label id="lblRegisterHere" onMouseClicked="#lblRegisterOnMouseClicked" text="Register Here">
               <font>
                  <Font name="Ubuntu Bold" size="21.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
         </children>
      </FlowPane>
      <Label alignment="CENTER" layoutX="244.0" layoutY="151.0" text="Enter Your NIC" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <font>
            <Font name="Ubuntu" size="16.0" />
         </font>
      </Label>
      <FlowPane alignment="CENTER" layoutY="180.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <TextField fx:id="txtNIC" alignment="CENTER" prefHeight="31.0" prefWidth="321.0">
               <font>
                  <Font name="Ubuntu" size="16.0" />
               </font>
            </TextField>
         </children>
      </FlowPane>
      <FlowPane alignment="CENTER" layoutX="269.0" layoutY="225.0" prefWidth="400.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button id="btnLogin" fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="47.0" prefWidth="112.0" text="LOGIN">
               <font>
                  <Font name="Ubuntu" size="21.0" />
               </font>
            </Button>
         </children>
      </FlowPane>
   </children>
</AnchorPane>
